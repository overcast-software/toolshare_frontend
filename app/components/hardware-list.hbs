<div class="hardware-list">
  {{#each this.hardware as |hardware|}}
    <div class="hardware-item">
      {{#if hardware.image}}
        <img
          src={{hardware.image}}
          alt={{hardware.name}}
          class="hardware-image"
        />
      {{/if}}

      <div class="hardware-content">
        <h3 class="hardware-name">{{if
            hardware.name
            hardware.name
            hardware.model
          }}</h3>

        <p class="hardware-detail"><strong>Asset Tag:</strong>
          {{hardware.assetTag}}</p>

        <p class="hardware-detail"><strong>Model:</strong>
          {{hardware.model}}</p>

        <p class="hardware-detail"><strong>Manufacturer:</strong>
          {{hardware.manufacturer}}</p>

        <p class="hardware-detail"><strong>Category:</strong>
          {{hardware.category}}</p>

        <p class="hardware-detail"><strong>Location:</strong>
          {{hardware.location}}</p>

        {{!-- <div class="hardware-status {{if (eq hardware.statusLabel 'Ready to Deploy') 'deployable' 'deployed'}}">
             {{hardware.statusLabel}}
             </div> --}}

        {{#if hardware.assignedTo}}
          <p class="hardware-assigned">Assigned to: {{hardware.assignedTo}}</p>
        {{/if}}

        {{#if hardware.purchaseCost}}
          <p class="hardware-cost">${{hardware.purchaseCost}}</p>
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>