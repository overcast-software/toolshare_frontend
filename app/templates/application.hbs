{{page-title "ToolShare"}}

{{#if this.session.isAuthenticated}}
  <header class="app-header">
    <div class="user-info">
      <button type="button" class="logout-button" {{on "click" this.logout}}>
        Logout
      </button>
    </div>
    <h1>ToolShare - Hardware Inventory</h1>
    <p>Borrow and share tools with your community</p>
    {{!-- Add the link to the items route --}}
    <nav>
      <LinkTo @route="items">items</LinkTo>
    </nav>
  </header>

  <main class="app-main">
    {{outlet}}
  </main>
{{else}}
  {{outlet}}
{{/if}}
